<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#EEE">
    <androidx.cardview.widget.CardView
        android:id="@+id/top_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            app:cardBackgroundColor="#f5c0c0"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                    <TextView
                        android:id="@+id/name_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:text="Tasneem H. Al-shobaki"
                        android:textSize="22sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                <TextView
                    android:id="@+id/addres_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginStart="20dp"
                    android:text="Palestine , gaza"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp" />

                <TextView
                    android:id="@+id/number_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginRight="50dp"
                    android:text="059999999999"
                    android:textColor="#5C4F4F"
                    android:textSize="18sp"
                    android:layout_marginLeft="50dp" />







            </LinearLayout>

        </androidx.cardview.widget.CardView>



    </androidx.cardview.widget.CardView>

</LinearLayout>